{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.ts",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"watch": "tsc -p tsconfig.build.json -w",
		"dev": "nodemon -e ts --watch src src/index.ts",
		"gen-env": "gen-env-types .env -o src/env.d.ts -e .",
		"typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/orm/config/ormconfig.ts",
		"create:migrations": "npm run typeorm:cli -- migration:create -n $1",
		"gen:migrations": "npm run typeorm:cli -- migration:generate -n kindie",
		"run:migrations": "npm run typeorm:cli -- migration:run",
		"setup:db": "ts-node ./src/helpers/setup.ts",
		"test": "npm run setup:db && jest --detectOpenHandles",
		"prettier": "prettier --write ."
	},
	"engines": {
		"node": ">=16.x"
	},
	"keywords": [],
	"author": "Filip Ivanusec",
	"license": "MIT",
	"_moduleAliases": {
		"@root": "src/",
		"@graphql/*": "src/graphql",
		"@helpers": "src/helpers",
		"@libs": "src/libs",
		"@middleware": "src/middleware",
		"@orm": "src/orm",
		"@types": "src/types",
		"@utils": "src/utils"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/connect-redis": "^0.0.19",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.13",
		"@types/express-session": "^1.17.4",
		"@types/faker": "^6.6.9",
		"@types/graphql-bigint": "^1.0.0",
		"@types/jest": "^27.0.0",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.24",
		"@types/nodemailer": "^6.4.4",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"body-parser": "^1.20.1",
		"eslint": "^8.20.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"faker": "^6.6.6",
		"jest": "^29.3.1",
		"nodemon": "^2.0.14",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.6",
		"ts-node": "^10.8.1",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"@apollo/server": "^4.3.0",
		"@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
		"argon2": "^0.28.2",
		"class-validator": "^0.14.0",
		"connect-redis": "^6.1.3",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv-safe": "^8.2.0",
		"express": "^4.17.2",
		"express-session": "^1.17.2",
		"graphql": "^15.3.0",
		"helmet": "^6.0.1",
		"ioredis": "^4.28.3",
		"nodemailer": "^6.7.0",
		"pg": "^8.7.1",
		"redis": "^3.1.2",
		"reflect-metadata": "^0.1.13",
		"tsconfig-paths": "^4.1.1",
		"type-graphql": "^1.1.1",
		"typeorm": "^0.2.45",
		"uuid": "^8.3.2",
		"winston": "^3.8.2"
	}
}
